/*头部区域 start*/
/*切图技巧：把慢慢买项目设置到320宽度，安装px to rem插件,设置px-to-rem为32,按快捷键alt + z*/
/*字体不要用rem*/
/*切图优点：基本和pc端切图保持一致，不需要想一些很灵活的技巧*/
.header {
  height: 1.5625rem;
  background: #ff841d;
  border-bottom: 1px solid #e6e6e6;
}
.header .logo {
  margin-left: 0.1563rem;
  padding: 0.375rem;
}
.logo a {
  display: block;
  width: 5.7969rem;
  height: 0.7813rem;
}
.logo img {
  width: 5.7969rem;
  height: 0.7813rem;
  display: block;
}
.appdown {
  padding: 0.2188rem;
}
.appdown a {
  display: block;
  width: 1.0625rem;
  height: 1.0625rem;
}
.appdown img {
  width: 1.0625rem;
  height: 1.0625rem;
  display: block;
}
/*头部区域 end*/
/*搜索区域 start */
.search {
  padding: 0.3125rem;
  border-bottom: 1px solid #e6e6e6;
  background: white;
  position: relative;
}
.search .searchtxt input {
  width: 8.5rem;
  height: 0.9375rem;
  padding-left: 0.5rem;
  border-radius: 0.4688rem;
  background: #f1f1f1;
  color: #000;
  font-size: 16px;
  border: none;
}
[data-dpr="2"] .search .searchtxt input {
  font-size: 32px;
}
[data-dpr="3"] .search .searchtxt input {
  font-size: 48px;
}
.search input[type="submit"] {
  width: 1.9688rem;
  height: 0.9375rem;
  position: absolute;
  top: 0.3125rem;
  right: 0.3125rem;
  border-radius: 0.4688rem;
  font-size: 16px;
  background: #ff841d;
  border: none;
}
[data-dpr="2"] .search input[type="submit"] {
  font-size: 32px;
}
[data-dpr="3"] .search input[type="submit"] {
  font-size: 48px;
}
/*搜索区域 end*/
/*导航区域 start */
.big-classify {
  padding: 0.1875rem 0;
  padding-top: 0.5rem;
}
.big-classify li {
  float: left;
  width: 2.5rem;
  height: 2.125rem;
  margin-bottom: 0.5rem;
}
.big-classify li:nth-last-child(-n+4) {
  display: none;
}
.big-classify li a {
  display: block;
}
.big-classify li {
  text-align: center;
}
.big-classify li .pic img {
  width: 1.5625rem;
}
.big-classify li .name {
  margin-top: 0.0938rem;
  font-size: 12px;
}
[data-dpr="2"] .big-classify li .name {
  font-size: 24px;
}
[data-dpr="3"] .big-classify li .name {
  font-size: 36px;
}
/*导航区域 end */
/*超值折扣推荐标题 start */
.jxhd {
  height: 1.0938rem;
  background-color: #ff9000;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#ffaf47), to(#ff9000));
  border-bottom: solid 1px #ffc881;
  padding-left: 0.3125rem;
}
.jxhd span {
  float: left;
  color: #fff;
  line-height: 1.0938rem;
}
.jxhd img {
  float: right;
  margin-top: 0.25rem;
  margin-right: 0.3125rem;
  width: 0.625rem;
  height: 0.625rem;
}
.jxhd span {
  font-size: 12px;
}
[data-dpr="2"] .jxhd span {
  font-size: 24px;
}
[data-dpr="3"] .jxhd span {
  font-size: 36px;
}
/*超值折扣推荐标题 end */
/*超值折扣推荐主体内容 start*/
.jxhdc {
  background: #fff;
}
.jxhdc li {
  padding: 0.4375rem 0.25rem;
}
.jxhdc .pic {
  float: left;
  width: 3.4375rem;
}
.jxhdc .pic img {
  width: 3.125rem;
  height: 3.125rem;
}
.jxhdc .info .title {
  color: #333;
  word-break: break-all;
  font-size: 15px;
  line-height: 0.5938rem;
  text-align: left;
  font-weight: normal;
}
[data-dpr="2"] .jxhdc .info .title {
  font-size: 30px;
}
[data-dpr="3"] .jxhdc .info .title {
  font-size: 45px;
}
.jxhdc .info .price {
  font-size: 14px;
  color: #e92322;
}
[data-dpr="2"] .jxhdc .info .price {
  font-size: 28px;
}
[data-dpr="3"] .jxhdc .info .price {
  font-size: 42px;
}
.jxhdc .info .title span {
  color: #ff6c00;
}
.jxhdc .info .other {
  margin-top: 8px;
  color: #a1a1a1;
  font-size: 12px;
}
[data-dpr="2"] .jxhdc .info .other {
  font-size: 24px;
}
[data-dpr="3"] .jxhdc .info .other {
  font-size: 36px;
}
.jxhdc .info .other .mall {
  float: left;
}
.jxhdc .info .other .comment {
  float: right;
}
